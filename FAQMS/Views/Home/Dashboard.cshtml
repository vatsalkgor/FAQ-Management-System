@{
    ViewBag.Title = "Dashboard";
}
@section css{
    <link href="~/Content/dropzone.min.css" rel="stylesheet" />

}
@section customcss{
    <link href="~/Content/dashboard.css" rel="stylesheet" />
}
@section customjs{

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.6/angular.min.js"></script>
    <script src="~/Scripts/dashboard.js"></script>
    <script src="~/Scripts/dropzone.min.js"></script>
    <script>
        Dropzone.options.frmFileUpload = {
            paramName: "file",
            maxFilesize: 2
        }
    </script>
}
<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <center><h2 style="font-size:20px; padding-top:10px;">Questions for Department {{dept}}</h2></center>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="btn-group pull-right">
                                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Change Action <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="javascript:void(0);">Mark Active</a></li>
                                    <li><a href="javascript:void(0);">Mark Inactive</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Question</th>
                                    <th>Answer</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td width="5%"><input type="checkbox" id="check" /><label for="check"></label></td>
                                    <td width="35%"></td>
                                    <td></td>
                                    <td width="10%"></td>
                                    <td width="10%"></td>
                                    <td width="10%">
                                        <div class="switch">
                                            <label><input type="checkbox" /><span class="lever switch-col-blue"></span></label>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="5%"><input type="checkbox" id="check2" /><label for="check2"></label></td>
                                    <td width="35%"></td>
                                    <td></td>
                                    <td width="10%"></td>
                                    <td width="10%"></td>
                                    <td width="10%">
                                        <div class="switch">
                                            <label><input type="checkbox" /><span class="lever switch-col-blue"></span></label>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="5%"><input type="checkbox" id="check3" /><label for="check3"></label></td>
                                    <td width="35%"></td>
                                    <td></td>
                                    <td width="10%"></td>
                                    <td width="10%"></td>
                                    <td width="10%">
                                        <div class="switch">
                                            <label><input type="checkbox" /><span class="lever switch-col-blue"></span></label>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="5%"><input type="checkbox" id="check4" /><label for="check4"></label></td>
                                    <td width="35%"></td>
                                    <td></td>
                                    <td width="10%"></td>
                                    <td width="10%"></td>
                                    <td width="10%">
                                        <div class="switch">
                                            <label><input type="checkbox" /><span class="lever switch-col-blue"></span></label>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_ImportQuestionModal")
</div>
